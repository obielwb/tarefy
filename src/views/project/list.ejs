<h2>Meus Projetos</h2>
<a href="/projects/create" class="btn">Novo Projeto</a>
<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% projects.forEach(project => { %>
    <tr>
      <td><%= project.nome %></td>
      <td><%= project.descricao %></td>
      <td>
        <a href="/projects/tasks/<%= project.id %>" class="btn">Ver Tarefas</a>
        <a href="/projects/edit/<%= project.id %>" class="btn">Editar</a>
        <a
          href="/projects/delete/<%= project.id %>"
          class="btn btn-danger"
          onclick="return confirm('Tem certeza?')"
          >Excluir</a
        >
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
